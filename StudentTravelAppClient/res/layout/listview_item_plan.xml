<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/spotImageInSpotDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dip"
            android:src="@drawable/traffic_icon" />

        <TextView
            android:id="@+id/spotsNameList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:text="大唐芙蓉园、华清池、兵马俑" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/planWeekday"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="20sp"
            android:textColor="#727171"
            android:layout_marginRight="16dip"
            android:layout_marginTop="12dip"
            android:text="周三" />

        <TextView
            android:id="@+id/planDay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="20sp"
            android:textColor="#727171"
            android:layout_marginRight="16dip"
            android:layout_marginTop="4dip"            
            android:layout_marginBottom="4dip"
            android:text="02" />

        <TextView
            android:id="@+id/planMonth"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="20sp"
            android:textColor="#727171"
            android:layout_marginRight="16dip"
            android:layout_marginTop="4dip"  
            android:layout_marginBottom="12dip"
            android:text="10月" />

    </LinearLayout>

</LinearLayout>
